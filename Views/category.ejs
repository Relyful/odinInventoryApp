<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Relytory categories</title>
</head>
<body>
  <%- include('Partials/header') %>
  <h2>Pick a bike category:</h2>
  <a href="/category/new" class="button">New Category</a>
  <div class="categories">
    <% categories.forEach((category) => { %>
      <div class="card">
        <a href="/category/<%= category.cat_name %>/bikes"><%= category.cat_name %></a>
        <div class="buttons">
          <a href="/category/<%= category.id %>/update" class="button">Update</a>
          <a href="/category/<%= category.id %>/delete" class="button">Delete</a>
        </div>
      </div>
    <% })  %>
  </div>
  <%- include('Partials/footer') %>
</body>
</html>